terr_days = mars_weather_df['terrestrial_date'].loc[(mars_weather_df['ls']==mars_weather_df['ls'][0]) & (mars_weather_df.index!=0)].iloc[0] - mars_weather_df['terrestrial_date'][0]
terr_days.days














